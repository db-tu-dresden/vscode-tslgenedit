{
  "name": "tslgen-edit",
  "displayName": "TSLGen-Editor",
  "description": "VSCode Editor Extension for editing TSL-Generator data files.",
  "version": "0.1.1",
  "publisher": "DBTUD",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/db-tu-dresden/vscode-tslgenedit"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "tslgen-edit.generatedCodePreview",
          "name": "TSL-Generator Code Preview"
        }
      ]
    },
    "languages": [
      {
        "id": "yaml",
        "extensions": [
          ".yaml",
          ".yml"
        ]
      }
    ],
    "commands": [
      {
        "command": "tslgen-edit.preview",
        "title": "Render the currently selected section",
        "category": "TSL-Generator"
      },
      {
        "command": "tslgen-edit.addFile",
        "title": "Add a new Data File to your TSL project",
        "category": "TSL-Generator"
      },
      {
        "command": "tslgen-edit.toggleFocusMode",
        "title": "Toggles the visibility of TSl-Generator related files",
        "category": "TSL-Generator"
      },
      {
        "command": "tslgen-edit.format",
        "title": "Format File",
        "category": "TSL-Generator"
      },
      {
        "command": "tslgen-edit.sort",
        "title": "Sort Yaml Documents",
        "category": "TSL-Generator"
      },
      {
        "command": "tslgen-edit.buildAndTest",
        "title": "Generate, Build and Test current Selection",
        "category": "TSL-Generator"
      }
    ],
    "keybindings": [
      {
        "command": "tslgen-edit.preview",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus"
      },
      {
        "command": "tslgen-edit.addFile",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "tslgen-edit.toggleFocusMode",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "view.workbench.explorer.fileView.visible"
      },
      {
        "command": "tslgen-edit.buildAndTest",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tslgen-edit.format",
          "when": "(resourceLangId == yaml) && editorTextFocus",
          "group": "tslFormat"
        },
        {
          "command": "tslgen-edit.sort",
          "when": "(resourceLangId == yaml) && editorTextFocus",
          "group": "tslFormat"
        }
      ],
      "editor/context": [
        {
          "submenu": "tslgen.Format",
          "group": "1_modification",
          "when": "(resourceLangId == yaml) && editorTextFocus"
        }
      ],
      "tslgen.Format": [
        {
          "command": "tslgen-edit.format",
          "group": "1_modification",
          "when": "(resourceLangId == yaml) && editorTextFocus"
        },
        {
          "command": "tslgen-edit.sort",
          "group": "1_modification",
          "when": "(resourceLangId == yaml) && editorTextFocus"
        }
      ]
    },
    "submenus": [
      {
        "label": "Change TSL-Generator Data File",
        "id": "tslgen.Format"
      }
    ]
  },
  "dependencies": {
    "async-mutex": "^0.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "highlight.js": "^11.7.0",
    "twing": "^6.0.0-alpha.1",
    "yaml": "^2.2.2"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "vscode": "^1.1.37",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "files": [
    "out",
    "node_modules"
  ]
}
